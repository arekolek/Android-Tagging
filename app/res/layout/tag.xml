<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#ffffff">

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/tagareabg">
    <!-- TODO make tagareabg themeable/styleable -->

		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:gravity="center_vertical"
			android:background="@drawable/tab_bar_rest">
      <!-- TODO make tab_bar_rest themeable/styleable -->
			<EditText android:id="@+id/tag_text_edit"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:textSize="18sp" android:layout_alignParentLeft="true"
				android:layout_marginLeft="4dip" android:layout_marginTop="2dip"
				android:layout_weight="1" android:singleLine="true"
				android:ellipsize="end" android:nextFocusDown="@+id/tag_add_button" />
			<!-- android:hint="@string/tag_hint"  -->
      <!-- TODO what about tag_add? -->
			<Button android:id="@+id/tag_add_button" android:text="@string/tag_add"
				android:textColor="#fff" android:gravity="center"
				android:layout_height="36dip" android:layout_width="wrap_content"
				android:layout_marginLeft="4dip" android:layout_marginRight="4dip"
				android:layout_marginBottom="1dip"
				android:background="@drawable/black_button" />
        <!-- TODO make black button styleable themeable -->
		</LinearLayout>

		<com.applicake.android.widget.TagLayout
			android:id="@+id/TagLayout" android:layout_width="fill_parent"
			android:layout_height="170dip">
		</com.applicake.android.widget.TagLayout>

	<ListView android:id="@+id/TagList"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#ffffff"
		android:divider="#d9d7d7">
	</ListView>

	</LinearLayout>
</LinearLayout>
